
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
<div class="highlightTextIn highlightTextOut">
    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    <div id="userBurger">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
            <button type="submit">Logout</button>
        </form>
        <a></a>
    </div>
    <a href="javascript:void(0);" class="icon" onclick="userBurger()">
        <i class="fas fa-user"></i>
    </a>

</div>
}
else
{
<div class="highlightTextIn highlightTextOut">
    <div id="userBurger">
        <a alt="REGISTER" asp-area="Identity" asp-page="/Account/Register">REGISTER</a>
        <a alt="LOGIN" asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
        <a></a>
    </div>
    <a href="javascript:void(0);" class="icon" onclick="userBurger()">
        <i class="fas fa-user"></i>
    </a>
</div>
}




