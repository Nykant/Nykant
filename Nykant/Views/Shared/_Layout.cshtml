<!DOCTYPE html>
<html lang="da">
<head>

    @inject SignInManager<AppUser> SignInManager
    @inject UserManager<AppUser> UserManager
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nykant</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Trirong">
    <script src="https://kit.fontawesome.com/dfade6c231.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/stil.css" />
    <link rel="stylesheet" href="~/css/filter.css" />
    <link rel="stylesheet" href="~/css/filter-changes.css" />
    <link rel="stylesheet" href="~/css/downarrow.css" />
    <link rel="stylesheet" href="~/css/kant.css" />
    <link rel="stylesheet" href="~/css/bag.css" />
</head>

<body>
    <div class="row">
        <div class="col-12 navbar-mobile">
            <div class="navbar-mobile-wrap highlightTextIn highlightTextOut">
                <a alt="NYKANT" asp-controller="Home" asp-action="Index"><span style="color:#eaeaea">N</span>YKANT</a>

                <a href="javascript:void(0);" class="icon" onclick="mobileNav()">
                    <i class="fa fa-bars"></i>
                </a>

                <a class="icon" asp-controller="Bag" asp-action="Details" asp-route-id="@ViewBag.UserId"><i class="fa fa-shopping-bag" aria-hidden="true"></i></a>

                @* ---------------------------------------------------------------- *@
                @if (SignInManager.IsSignedIn(User))
                {

                        <div id="userBurger">
                            <a alt="logged in as: @UserManager.GetUserName(User)!" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">logged in as: @UserManager.GetUserName(User)!</a>
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                                <button type="submit">Logout</button>
                            </form>
                            <a></a>
                        </div>
                        <a href="javascript:void(0);" class="icon" onclick="userBurger()">
                            <i class="fas fa-user"></i>
                        </a>


                }
                else
                {

                        <div id="userBurger">
                            <a alt="REGISTER" asp-area="Identity" asp-page="/Account/Register">REGISTER</a>
                            <a alt="LOGIN" asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
                            <a></a>
                        </div>
                        <a href="javascript:void(0);" class="icon" onclick="userBurger()">
                            <i class="fas fa-user"></i>
                        </a>

                }
                @* ---------------------------------------------------------------- *@

                <div id="myLinks">
                    <a alt="HJEM" asp-controller="Home" asp-action="Index">HJEM</a>
                    <a alt="PRODUKTER" asp-controller="Product" asp-action="Index">PRODUKTER</a>
                    <a alt="KONTAKT" asp-controller="Contact" asp-action="Index">KONTAKT</a>
                </div>
            </div>
        </div>
        <div class="col-12 navbar">
            <div class="navbar-wrap highlightTextIn highlightTextOut">
                <a alt="NYKANT" asp-controller="Home" asp-action="Index" style="margin-right:50px;"><span style="color:#eaeaea">N</span>YKANT</a>
                <a alt="HJEM" asp-controller="Home" asp-action="Index">HJEM</a>
                <a alt="PRODUKTER" asp-controller="Product" asp-action="Index">PRODUKTER</a>
                <a alt="KONTAKT" asp-controller="Contact" asp-action="Index">KONTAKT</a>

                <a class="icon" asp-controller="Bag" asp-action="Details" asp-route-id="@ViewBag.UserId"> <i class="fa fa-shopping-bag" aria-hidden="true"></i></a>

                @* ---------------------------------------------------------------- *@
                @if (SignInManager.IsSignedIn(User))
                {
                        <div id="userBurger2">
                            <a alt="logged in as: @UserManager.GetUserName(User)!" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">logged in as: @UserManager.GetUserName(User)!</a>
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                                <button type="submit">Logout</button>
                            </form>
                            <a></a>
                        </div>
                        <a href="javascript:void(0);" class="icon" onclick="userBurger2()">
                            <i class="fas fa-user"></i>
                        </a>

                }
                else
                {
                        <div id="userBurger2">
                            <a alt="REGISTER" asp-area="Identity" asp-page="/Account/Register">REGISTER</a>
                            <a alt="LOGIN" asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
                            <a></a>
                        </div>
                        <a href="javascript:void(0);" class="icon" onclick="userBurger2()">
                            <i class="fas fa-user"></i>
                        </a>
                }
                @* ---------------------------------------------------------------- *@
            </div>
        </div>
    </div>

    <div>
        <main>
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            &copy; 2020 - Nykant - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.unobtrusive-ajax/3.2.5/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/JS/mobileNav.js"></script>
    <script src="~/JS/slidedetails.js"></script>
    <script src="~/JS/counter.js"></script>
    <script src="~/JS/image-changer.js"></script>
    <script src="~/JS/jquery-2.1.1.js"></script>
    <script src="~/JS/jquery.mixitup.min.js"></script>
    <script src="~/JS/modernizr.js"></script>
    <script src="~/JS/main.js"></script> <!-- Resource jQuery -->
    <script src="~/JS/slideintext.js"></script>
    <script src="~/JS/downarrowstop.js"></script>
    <script src="~/JS/slideshow.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
