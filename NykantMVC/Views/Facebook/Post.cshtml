@model Post
@{
    ViewData["Title"] = "Post";
    ViewData["Description"] = "";
}

<link rel="stylesheet" href="~/css/my-list.css" />

<div id="randomWinnerPartial">
        <partial name="_RandomWinnerPartial" />
</div>

<div class="padding-50 center">
    <form method="post" data-ajax="true" data-ajax-method="post" data-ajax-update="randomWinnerPartial" data-ajax-complete="noop" data-ajax-begin="noop" data-ajax-failure="noop" data-ajax-success="noop" asp-controller="Facebook" asp-action="PickRandom" asp-route-postId="@Model.Id">
        <button type="submit">Pick Random</button>
    </form>
</div>


<div class="my-row bottom-padding">
    <div class="responsive-container center">
        <div class="col-6 left">
            <h1 class="list-h1">
                Post Comments
            </h1>

            <table class="my-list">
                <tr class="no-hover">
                    <th>Id</th>
                    <th>Created Time</th>
                    <th>Name</th>
                </tr>
                @if (Model.Comments != null)
                {
                    @foreach (var comment in Model.Comments.List)
                    {
                        <tr>
                            <td>@comment.Id</td>
                            <td>@comment.CreatedTime</td>
                            <td>@comment.From.Name</td>
                        </tr>
                    }
                }
            </table>
        </div>
        <div class="col-6 right">
            <h1 class="list-h1">Post Likes</h1>
            <table class="my-list">
                <tr class="no-hover">
                    <th>Id</th>
                    <th>Created Time</th>
                    <th>Name</th>
                </tr>
                @if (Model.Likes != null)
                {
                    @foreach (var comment in Model.Likes.List)
                    {
                        <tr>
                            <td>@comment.Id</td>
                            <td>@comment.CreatedTime</td>
                            <td>@comment.Name</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>

