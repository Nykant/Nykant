@model List<BagItem>

@{
    ViewData["Title"] = "Details";
}

<script src="~/JS/bag.js" defer></script>

<div class="row top-padding bottom-side-padding fullscreen-row">
    <div class="col-10 center" id="bag-wrapper">
        <div class="col-8 left fadein" id="bagtable-container">
            <div class="bagtitle">
                Kurv
            </div>
            <div class="bagtable" id="bagtable">
                <partial name="_BagTablePartial" />
            </div>
        </div>
        <div class="col-3 left" id="checkout-box">
            <div class="order-info">
                <h1>Ordre</h1>
                <p style="float:left;">Levering</p>
                <p id="price-info" style="float:right;">Total ekskl. levering</p>
            </div>
            <div class="checkout-price">
                <p id="total-price-text">total: @ViewBag.PriceSum</p>
            </div>
            <a asp-controller="Checkout" asp-action="Checkout">
                <div class="button">
                    <p>Gå til kassen</p>
                </div>
            </a>
        </div>
    </div>
</div>
