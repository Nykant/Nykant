@using NykantMVC.Extensions;
@{
    ViewBag.ShowBanner = true;
    var consent = Context.Session.Get<Consent>("verysecretseriousconsentsessionkeyspecial");
    if (consent != null)
    {
        ViewBag.ShowBanner = consent.ShowBanner;
    }
}

@if (ViewBag.ShowBanner)
{
    <script src="~/JS/consent.js" defer></script>

    <div id="cookie-consent" class="cookie-consent" role="alert">
        <div class="header margin-bottom-10">
            Cookie Samtykke
        </div>
        <div class="col-6 left">

            <div class="bottom-side-padding">
                <p>
                    Ved at klikke <span class="bold-text">accepter alle cookies</span> giver du dit samtykke på at vi må bruge alle vores cookies i din browser.
                </p>
            </div>
            <div>
                <a class="simple-link" asp-controller="Nykant" asp-action="cookiepolicy">her kan du læse mere om vores cookies</a>
            </div>
        </div>

        <div class="col-6 right">
            <div class="col-4 left padding-5">
                <button type="button" class="button" id="open-privacy2">
                    Instillinger
                </button>
            </div>

            <form method="post" data-ajax="true" data-ajax-method="post" data-ajax-update="#cookie-settings-partial" data-ajax-success="consent_updated" data-ajax-complete="noop" data-ajax-begin="noop" data-ajax-failure="noop" asp-controller="Nykant" asp-action="OnlyEssentialConsent" class="col-4 left padding-5">
                <button type="submit" class="button">
                    Kun essentielle cookies
                </button>
            </form>

            <form method="post" data-ajax="true" data-ajax-method="post" data-ajax-update="#cookie-settings-partial" data-ajax-success="consent_updated" data-ajax-complete="noop" data-ajax-begin="noop" data-ajax-failure="noop" asp-controller="Nykant" asp-action="AllowAllConsent" class="col-4 left padding-5">
                <button type="submit" class="green-button">
                    Accepter alle cookies
                </button>
            </form>
        </div>
    </div>
}

