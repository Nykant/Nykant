                    <span>- Træ.dk</span>
                </div>
                <img src="../images/Products/NYKANT_miljoe 5.png" />
            </div>
        </div>
        <div class="slide-buttons" id="slide-buttons">
            <input id="radio1" type="radio" name="slide" checked />
            <input id="radio2" type="radio" name="slide" />
            <input id="radio3" type="radio" name="slide" />
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="owl-carousel">
                @foreach (var category in Model)
                {
                    <div class="product-card">
                        @*<div class="product-badge text-danger">28% Off</div>*@<a class="product-thumb" href="/Product/Index?searchString=@category.Name" data-abc="true"><img src="@category.ImgSource" alt="Category"></a>
