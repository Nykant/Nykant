@model CustomerInf

@{
    ViewData["Title"] = "Checkout";
}

<div class="row bottom-side-padding fadein">
    <div class="col-8 center col-wrapper top-padding ">
        <div class="col-12 left">
            <div class="breadcrumbs">
                <a asp-controller="Bag" asp-action="Details">SHOPPING BAG</a>  >
                <a class="current">CUSTOMER</a> >
                <a>SHIPPING</a> >
                <a>PAYMENT</a>
            </div>
        </div>
        <form id="customer-form" asp-controller="Checkout" asp-action="PostCustomerInf" method="post">
            <div class="col-8 left right-side-padding fadein top-side-padding">

                <input type="hidden" asp-for="@Model.Id" />
                <div class="customerinfo">
                    <div class="header">
                        Your contact information
                    </div>

                    <div class="customerinfo-line">
                        <div class="inputstyle left">
                            <input required asp-for="@Model.Email" />
                            <label asp-for="@Model.Email"></label>
                            <span asp-validation-for="@Model.Email"></span>
                            <div class="underline"></div>
                        </div>
                        <div class="inputstyle left">
                            <input required asp-for="@Model.Phone" />
                            <label asp-for="@Model.Phone"></label>
                            <span asp-validation-for="@Model.Phone"></span>
                            <div class="underline"></div>
                        </div>
                    </div>

                    <div class="customerinfo-line">
                        <div class="inputstyle left">
                            <input required asp-for="@Model.FirstName" />
                            <label asp-for="@Model.FirstName"></label>
                            <span asp-validation-for="@Model.FirstName"></span>
                            <div class="underline"></div>
                        </div>
                        <div class="inputstyle left">
                            <input required asp-for="@Model.LastName" />
                            <label asp-for="@Model.LastName"></label>
                            <span asp-validation-for="@Model.LastName"></span>
                            <div class="underline"></div>
                        </div>
                    </div>

                    <div class="customerinfo-line">
                        <div class="inputstyle left">
                            <input required asp-for="@Model.Address1" />
                            <label asp-for="@Model.Address1"></label>
                            <span asp-validation-for="@Model.Address1"></span>
                            <div class="underline"></div>
                        </div>
                        <div class="inputstyle left">
                            <input asp-for="@Model.Address2" />
                            <label asp-for="@Model.Address2"></label>
                            <span asp-validation-for="@Model.Address2"></span>
                            <div class="underline"></div>
                        </div>
                    </div>

                    <div class="customerinfo-line">
                        <div class="inputstyle left">
                            <input required asp-for="@Model.City" />
                            <label asp-for="@Model.City"></label>
                            <span asp-validation-for="@Model.City"></span>
                            <div class="underline"></div>
                        </div>
                        <div class="inputstyle left">
                            <input id="country-input" class="hidden" asp-for="@Model.Country" />
                            <div class="country-label">Modtagers Land</div>
                            <select required id="country-picker">
                                <option>Vælg Land</option>
                                <option>DK</option>
                            </select>
                            <div class="country-error hidden" id="country-error">
                                vælg et land før du kan fortsætte.
                            </div>
                        </div>
                    </div>

                    <div class="customerinfo-line">
                        <div class="inputstyle left">
                            <input required asp-for="@Model.Postal" />
                            <label asp-for="@Model.Postal"></label>
                            <span asp-validation-for="@Model.Postal"></span>
                            <div class="underline"></div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-4 right fadein top-side-padding">
                <div class="sidebar">
                    <div class="sidebar-items">
                        @foreach (var item in ViewBag.BagItems)
                        {
                            <div class="sidebar-item">
                                <img src="~/images/gyngestol.jpg" />
                                <p>@item.Product.Title</p>
                                <p>@item.Quantity stk.</p>
                            </div>
                        }
                        <div class="checkout-price">
                            <p><span>shipping:</span> price</p>
                            <p><span>taxes:</span> price</p>
                            <p><span>total:</span> @ViewBag.TotalPrice</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-4 right fadein top-side-padding">
                <button class="button" type="submit">CONTINUE</button> @*------------- SUBMIT FORM --------------*@
            </div>
        </form>
    </div>
</div>

<script src="~/JS/country-picker.js"></script>