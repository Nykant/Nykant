@inject IViewLocalizer localizer 
@model CheckoutVM

<div class="sidebar">
    <div class="sidebar-items">
        @foreach (var item in Model.Checkout.BagItems)
        {
            <div class="sidebar-item">
                <img src="~/images/gyngestol.jpg" />
                <p>@item.Product.Title</p>
                <p>@item.Quantity @localizer["Pieces"]</p>
            </div>
        }
    <div class="checkout-price">
        <p>@localizer["Subtotal:"] <span id="checkout-subtotal" data-subtotal="@Model.Checkout.SubTotalPrice">@Model.Checkout.SubTotalPrice</span> kr.</p>
        <p>@localizer["Shipping Costs:"] <span id="checkout-shipping-price" data-shippingPrice="@Model.Checkout.TotalPrice">@Model.ShippingDelivery.Price</span> kr.</p>
        <p>@localizer["Taxes:"] <span id="checkout-taxes" data-taxes="@Model.Checkout.TotalPrice">@Model.Checkout.Taxes</span> kr.</p>
        <p>@localizer["Total Inc. Taxes:"] <span id="checkout-total" data-totalPrice="@Model.Checkout.TotalPrice">@Model.Checkout.TotalPrice</span> kr.</p>
    </div>

        <a asp-controller="Checkout" asp-action="CancelCheckout">
            <div class="button top-side-padding">
                @localizer["Cancel order"]
            </div>
        </a>
    </div>
</div>
