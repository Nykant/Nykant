@inject IViewLocalizer localizer
@model CheckoutVM

<div class="row bottom-side-padding">
        <div class="hide-overflow responsive-form" id="customerinf-wrapper">
            <div class="checkout-header z200" id="customerInf-header">
                <h1>
                    @localizer["Customer Header"]
                </h1>
                <div class="check-sign" id="customer-check-sign">
                    <i class="fa fa-check" aria-hidden="true"></i>
                </div>
                <div id="customerinf-summary">
                    <p>@localizer["Email"]: <span id="customer-email-summary">@Model.Customer.Email</span></p>
                    <p>@localizer["Telephone"]: <span id="customer-phone-summary">@Model.Customer.Phone</span></p>
                    <div class="invoice-summary margin-top-10">
                        <p class="bold-text">Invoice Address</p>
                        <p>@localizer["First Name"]: <span id="customer-firstname-summary">@Model.Customer.InvoiceAddress.FirstName</span></p>
                        <p>@localizer["Last Name"]: <span id="customer-lastname-summary">@Model.Customer.InvoiceAddress.LastName</span></p>
                        <p>@localizer["Address"]: <span id="customer-address-summary">@Model.Customer.InvoiceAddress.Address</span></p>
                        <p>@localizer["City"]: <span id="customer-city-summary">@Model.Customer.InvoiceAddress.City</span></p>
                        <p>@localizer["Country"]: <span id="customer-country-summary">@Model.Customer.InvoiceAddress.Country</span></p>
                        <p>@localizer["Postal"]: <span id="customer-postal-summary">@Model.Customer.InvoiceAddress.Postal</span></p>
                    </div>
                    <div id="shippingaddress-summary" class="shipping-summary margin-top-10">
                        <p class="bold-text">Shipping Address</p>
                        <p>@localizer["First Name"]: <span id="shippingaddress-firstname-summary">@Model.Customer.ShippingAddress.FirstName</span></p>
                        <p>@localizer["Last Name"]: <span id="shippingaddress-lastname-summary">@Model.Customer.ShippingAddress.LastName</span></p>
                        <p>@localizer["Address"]: <span id="shippingaddress-address-summary">@Model.Customer.ShippingAddress.Address</span></p>
                        <p>@localizer["City"]: <span id="shippingaddress-city-summary">@Model.Customer.ShippingAddress.City</span></p>
                        <p>@localizer["Country"]: <span id="shippingaddress-country-summary">@Model.Customer.ShippingAddress.Country</span></p>
                        <p>@localizer["Postal"]: <span id="shippingaddress-postal-summary">@Model.Customer.ShippingAddress.Postal</span></p>
                    </div>

                    <button class="button edit-button" id="customer-edit-button">@localizer["Change"]</button>
                </div>
            </div>

            <form class="z50" id="customer-form" method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="noop" data-ajax-complete="customer_completed" data-ajax-begin="noop" data-ajax-failure="noop" asp-controller="Checkout" asp-action="PostCustomerInf">
                <input type="hidden" id="edit-customer" name="editCustomer" value="false" />
                <input type="hidden" asp-for="@Model.Customer.Id" />
                <div class="checkout-wrap" id="customer-wrap" >
                    <div class="customerinfo">

                        <div class="customer-box">
                            <div class="inputstyle left">
                                <input id="customer-email-input" required asp-for="@Model.Customer.Email" />
                                <label asp-for="@Model.Customer.Email"></label>
                                <span asp-validation-for="@Model.Customer.Email"></span>
                                <div class="underline"></div>
                            </div>
                            <div class="inputstyle left">
                                <input id="customer-phone-input" required asp-for="@Model.Customer.Phone" />
                                <label asp-for="@Model.Customer.Phone"></label>
                                <span asp-validation-for="@Model.Customer.Phone"></span>
                                <div class="underline"></div>
                            </div>
                        </div>

                        <div class="invoice-address-box">
                            <div class="checkout-header">
                                @localizer["Invoice Address"]
                            </div>
                            <div class="inputstyle left">
                                <input id="customer-firstname-input" required asp-for="@Model.Customer.InvoiceAddress.FirstName" />
                                <label asp-for="@Model.Customer.InvoiceAddress.FirstName"></label>
                                <span asp-validation-for="@Model.Customer.InvoiceAddress.FirstName"></span>
                                <div class="underline"></div>
                            </div>
                            <div class="inputstyle left">
                                <input id="customer-lastname-input" required asp-for="@Model.Customer.InvoiceAddress.LastName" />
                                <label asp-for="@Model.Customer.InvoiceAddress.LastName"></label>
                                <span asp-validation-for="@Model.Customer.InvoiceAddress.LastName"></span>
                                <div class="underline"></div>
                            </div>

                            <div class="inputstyle left">
                                <input id="customer-address-input" required asp-for="@Model.Customer.InvoiceAddress.Address" />
                                <label asp-for="@Model.Customer.InvoiceAddress.Address"></label>
                                <span asp-validation-for="@Model.Customer.InvoiceAddress.Address"></span>
                                <div class="underline"></div>
                            </div>
                            <div class="inputstyle left">
                                <input id="customer-city-input" required asp-for="@Model.Customer.InvoiceAddress.City" />
                                <label asp-for="@Model.Customer.InvoiceAddress.City"></label>
                                <span asp-validation-for="@Model.Customer.InvoiceAddress.City"></span>
                                <div class="underline"></div>
                            </div>
                            <div class="inputstyle left">
                                <input id="customer-country-input" class="hidden" asp-for="@Model.Customer.InvoiceAddress.Country" />
                                <div class="country-label">@localizer[""]</div>
                                <select required id="country-picker">
                                    <option>@localizer[""]</option>
                                    <option>DK</option>
                                </select>
                                <div class="country-error hidden" id="country-error">
                                    @localizer["Choose country to continue"]
                                </div>
                            </div>
                            <div class="inputstyle left">
                                <input id="customer-postal-input" required asp-for="@Model.Customer.InvoiceAddress.Postal" />
                                <label asp-for="@Model.Customer.InvoiceAddress.Postal"></label>
                                <span asp-validation-for="@Model.Customer.InvoiceAddress.Postal"></span>
                                <div class="underline"></div>
                            </div>
                            <div class="same-as-invoice">
                                <label class="simple-checkbox">
                                    <input id="reuse-invoice" asp-for="@Model.Customer.ShippingAddress.SameAsInvoice" value="true" type="checkbox">
                                    <span class="simple-checkmark"></span>
                                </label>
                                <p>
                                    @localizer["Use invoice address as shipping address"]
                                </p>
                            </div>
                        </div>

                        <div class="shipping-address-box" id="shipping-address-box">
                            <div class="checkout-header" id="shipping-header">
                                @localizer["Shipping Address"]
                            </div>
                            <div class="inputstyle left">
                                <input id="shippingaddress-firstname" required asp-for="@Model.Customer.ShippingAddress.FirstName" />
                                <label asp-for="@Model.Customer.ShippingAddress.FirstName"></label>
                                <span asp-validation-for="@Model.Customer.ShippingAddress.FirstName"></span>
                                <div class="underline"></div>
                            </div>
                            <div class="inputstyle left">
                                <input id="shippingaddress-lastname" required asp-for="@Model.Customer.ShippingAddress.LastName" />
                                <label asp-for="@Model.Customer.ShippingAddress.LastName"></label>
                                <span asp-validation-for="@Model.Customer.ShippingAddress.LastName"></span>
                                <div class="underline"></div>
                            </div>

                            <div class="inputstyle left">
                                <input id="shippingaddress-address" required asp-for="@Model.Customer.ShippingAddress.Address" />
                                <label asp-for="@Model.Customer.ShippingAddress.Address"></label>
                                <span asp-validation-for="@Model.Customer.ShippingAddress.Address"></span>
                                <div class="underline"></div>
                            </div>
                            <div class="inputstyle left">
                                <input id="shippingaddress-city" required asp-for="@Model.Customer.ShippingAddress.City" />
                                <label asp-for="@Model.Customer.ShippingAddress.City"></label>
                                <span asp-validation-for="@Model.Customer.ShippingAddress.City"></span>
                                <div class="underline"></div>
                            </div>
                            <div class="inputstyle left">
                                <input id="shippingaddress-country" class="hidden" asp-for="@Model.Customer.ShippingAddress.Country" />
                                <div class="country-label">@localizer[""]</div>
                                <select required id="shippingaddress-country-picker">
                                    <option>@localizer[""]</option>
                                    <option>DK</option>
                                </select>
                                <div class="country-error hidden" id="shippingaddress-country-error">
                                    @localizer["Choose country to continue"]
                                </div>
                            </div>
                            <div class="inputstyle left">
                                <input id="shippingaddress-postal" required asp-for="@Model.Customer.ShippingAddress.Postal" />
                                <label asp-for="@Model.Customer.ShippingAddress.Postal"></label>
                                <span asp-validation-for="@Model.Customer.ShippingAddress.Postal"></span>
                                <div class="underline"></div>
                            </div>
                        </div>

                        <div class="gdpr-accept">
                            <label class="checkbox">
                                <input id="privacy-policy-consent" value="false" type="checkbox">
                                <span class="checkmark"></span>
                            </label>
                            <input required type="hidden" id="privacy-policy-input" asp-for="@Model.Customer.PrivacyPolicyConsent" />
                            @localizer["Signature required"]
                        </div>

                        <div class="padding-10">

                        </div>
                    </div>
                    
                    <div class="col-12 left" id="customer-button">
                        <button id="customerInf-submit" class="button" type="submit" disabled>@localizer[""]</button> @*------------- SUBMIT FORM --------------*@
                    </div>
                </div>
            </form>
        </div>
</div>




