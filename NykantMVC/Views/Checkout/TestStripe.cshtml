<script src="https://js.stripe.com/v3/"></script>

<div class="row top-padding">
    <div class="col-6 center">
        <form asp-action="PostTestStripe" method="post" class="dark-card" id="payment-form">
            <div id="card-element">
                <!-- Elements will create input elements here -->
            </div>

            <!-- We'll put the error messages in this element -->
            <div id="card-errors" role="alert"></div>

            <button type="submit" id="card-button" data-secret="@ViewBag.ClientSecret">Pay</button>
        </form>
    </div>
</div>

<script src="~/JS/Stripe/StripeTest.js"></script>