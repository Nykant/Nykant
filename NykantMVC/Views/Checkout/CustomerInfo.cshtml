@model CheckoutVM

@{
    ViewData["Title"] = "Checkout";
}


<div class="row bottom-side-padding fadein">
    <div class="col-8 center top-padding ">
        <div class="col-8 left right-side-padding">
            <div class="breadcrumbs dark-card">
                <a asp-controller="Bag" asp-action="Details" asp-route-subject="@Model.Subject">Shopping Bag</a> >
                <a class="current">Customer Info</a> >
                <a>Shipping</a> >
                <a>Payment</a>
            </div>
        </div>
    </div>
</div>



<form asp-controller="Checkout" asp-action="CustomerInfo" method="post">
    @for (int i = 0; i < Model.BagItems.Count(); i++)
    {
        @Html.HiddenFor(x => x.BagItems[i].ProductId);
        @Html.HiddenFor(x => x.BagItems[i].Subject);
        @Html.HiddenFor(x => x.BagItems[i].Quantity);
        @Html.HiddenFor(x => x.BagItems[i].Product.Title);
        @Html.HiddenFor(x => x.BagItems[i].Product.ImageSource);
    }
    @Html.HiddenFor(x => x.PriceSum)
    @Html.HiddenFor(x => x.Subject)

    <div class="row">
        <div class="col-8 center">
            <div class="col-8 left right-side-padding fadein">
                <div class="customerinfo dark-card">
                    <div class="header">
                        Your contact information
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.CustomerInfo.Email" />
                        <label asp-for="@Model.CustomerInfo.Email"></label>
                        <span asp-validation-for="@Model.CustomerInfo.Email"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.CustomerInfo.FirstName" />
                        <label asp-for="@Model.CustomerInfo.FirstName"></label>
                        <span asp-validation-for="@Model.CustomerInfo.FirstName"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.CustomerInfo.LastName" />
                        <label asp-for="@Model.CustomerInfo.LastName"></label>
                        <span asp-validation-for="@Model.CustomerInfo.LastName"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.CustomerInfo.Address" />
                        <label asp-for="@Model.CustomerInfo.Address"></label>
                        <span asp-validation-for="@Model.CustomerInfo.Address"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.CustomerInfo.City" />
                        <label asp-for="@Model.CustomerInfo.City"></label>
                        <span asp-validation-for="@Model.CustomerInfo.City"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.CustomerInfo.Country" />
                        <label asp-for="@Model.CustomerInfo.Country"></label>
                        <span asp-validation-for="@Model.CustomerInfo.Country"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.CustomerInfo.Postal" />
                        <label asp-for="@Model.CustomerInfo.Postal"></label>
                        <span asp-validation-for="@Model.CustomerInfo.Postal"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.CustomerInfo.Phone" />
                        <label asp-for="@Model.CustomerInfo.Phone"></label>
                        <span asp-validation-for="@Model.CustomerInfo.Phone"></span>
                        <div class="underline"></div>
                    </div>
                </div>
            </div>
            <div class="col-4 right fadein dark-card">
                <div class="sidebar">
                    <div class="sidebar-header">
                        <h1>Bag</h1>
                    </div>
                    <div class="sidebar-items">
                        @foreach (var item in Model.BagItems)
                        {
                            <div class="sidebar-item">
                                <img src="~/images/gyngestol.jpg" />
                                <p>@item.Product.Title</p>
                                <p>@item.Quantity stk.</p>
                            </div>
                        }
                        <div class="checkout-price">
                            <p><span>shipping:</span> price</p>
                            <p><span>taxes:</span> price</p>
                            <p><span>total:</span> @Model.PriceSum</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 right fadein ">
                <button class="button dark-card" type="submit">CONTINUE</button> @*------------- SUBMIT FORM --------------*@
            </div>
        </div>
    </div>
</form>