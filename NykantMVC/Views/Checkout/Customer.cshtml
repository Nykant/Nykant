@model Checkout

@{
    ViewData["Title"] = "Checkout";
}

<div class="row bottom-side-padding fadein">
    <div class="col-8 center top-padding ">
        <div class="col-8 left right-side-padding">
            <div class="breadcrumbs dark-card">
                <a asp-controller="Bag" asp-action="Details">Shopping Bag</a> >
                <a class="current">Customer Info</a> >
                <a>Shipping</a> >
                <a>Payment</a>
            </div>
        </div>
    </div>
</div>

<form asp-controller="Checkout" asp-action="PostCustomer" method="post">
    <div class="row">
        <div class="col-8 center">
            <div class="col-8 left right-side-padding fadein">
                <div class="customerinfo dark-card">
                    <div class="header">
                        Your contact information
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.Customer.Email" />
                        <label asp-for="@Model.Customer.Email"></label>
                        <span asp-validation-for="@Model.Customer.Email"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.Customer.FirstName" />
                        <label asp-for="@Model.Customer.FirstName"></label>
                        <span asp-validation-for="@Model.Customer.FirstName"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.Customer.LastName" />
                        <label asp-for="@Model.Customer.LastName"></label>
                        <span asp-validation-for="@Model.Customer.LastName"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.Customer.Address" />
                        <label asp-for="@Model.Customer.Address"></label>
                        <span asp-validation-for="@Model.Customer.Address"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.Customer.City" />
                        <label asp-for="@Model.Customer.City"></label>
                        <span asp-validation-for="@Model.Customer.City"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.Customer.Country" />
                        <label asp-for="@Model.Customer.Country"></label>
                        <span asp-validation-for="@Model.Customer.Country"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.Customer.Postal" />
                        <label asp-for="@Model.Customer.Postal"></label>
                        <span asp-validation-for="@Model.Customer.Postal"></span>
                        <div class="underline"></div>
                    </div>
                    <div class="inputstyle">
                        <input required asp-for="@Model.Customer.Phone" />
                        <label asp-for="@Model.Customer.Phone"></label>
                        <span asp-validation-for="@Model.Customer.Phone"></span>
                        <div class="underline"></div>
                    </div>
                </div>
            </div>

            <div class="col-4 right fadein dark-card">
                <div class="sidebar">
                    <div class="sidebar-header">
                        <h1>Bag</h1>
                    </div>
                    <div class="sidebar-items">
                        @foreach (var item in Model.BagItems)
                        {
                            <div class="sidebar-item">
                                <img src="~/images/gyngestol.jpg" />
                                <p>@item.Product.Title</p>
                                <p>@item.Quantity stk.</p>
                            </div>
                        }
                        <div class="checkout-price">
                            <p><span>shipping:</span> price</p>
                            <p><span>taxes:</span> price</p>
                            <p><span>total:</span> @Model.TotalPrice</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-4 right fadein ">
                <button class="button dark-card" type="submit">CONTINUE</button> @*------------- SUBMIT FORM --------------*@
            </div>
        </div>
    </div>
</form>