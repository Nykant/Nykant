                <div class="follow-container" id="follow-container">
                    <div class="follow-box" id="follow-box">
                        <p id="follow-name">@Model.Nora.Name</p>
                        <p id="follow-oil">@Model.Nora.Oil</p>
                        <p id="follow-price">
                            kr. @ProductHelper.GetPrice(Model.Nora) @if (Model.Nora.Discount > 0)
                            {
                                <span class="line-through red-text">@Model.Nora.Price</span>
                            }
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

