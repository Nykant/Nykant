<div id="lb-back">
    <div id="lb-img"></div>
</div>

<div class="my-row">
    <div class="slideshow">
        <div class="slide-container" id="slide-container">
            <div class="slide">
                <picture>
                    <source srcset="../images/Products/Miljø/Desktop/Miljoe_2.png" media="(min-width: 600px)">
                    @*<source srcset="../images/Products/Miljø/Desktop/Miljoe_2.png" media="(min-width: 1000px)">*@
                    <img src="../images/Products/Miljø/Phone/Miljoe_2.png" alt="Egetræsmøbler i miljø">
                </picture>
            </div>
            <div class="slide">
                <picture>
                    @*<source srcset="../images/Products/Miljø/Desktop/NYKANT_miljoe_1_varient.png" media="(min-width: 1000px)">*@
                    <source loading="lazy" srcset="../images/Products/Miljø/Desktop/NYKANT_miljoe_1_varient.png" media="(min-width: 600px)">
                    <img loading="lazy" src="../images/Products/Miljø/Phone/NYKANT_miljoe_1_varient.png" alt="Egetræsmøbler i miljø">
                </picture>
            </div>
            <div class="slide">
                <picture>
                    @*<source srcset="../images/Products/Miljø/Desktop/Miljoe_3.png" media="(min-width: 1000px)">*@
                    <source loading="lazy" srcset="../images/Products/Miljø/Desktop/Miljoe_3.png" media="(min-width: 600px)">
                    <img loading="lazy" src="../images/Products/Miljø/Phone/Miljoe_3.png" alt="Egetræsmøbler i miljø">
                </picture>
            </div>
            <div class="slide">
                <picture>
                    @*<source srcset="../images/Products/Miljø/Desktop/NYKANT_miljoe_4.png" media="(min-width: 1000px)">*@
                    <source loading="lazy" srcset="../images/Products/Miljø/Desktop/NYKANT_miljoe_4.png" media="(min-width: 600px)">
                    <img loading="lazy" src="../images/Products/Miljø/Phone/NYKANT_miljoe_5.png" alt="Egetræsmøbler i miljø">
                </picture>
            </div>
        </div>
    </div>
</div>

<div class="my-row top-side-padding">
    <div class="col-1 center">
        <div class="slide-buttons" id="slide-buttons">
            <input id="radio1" type="radio" name="slide" checked />
            <input id="radio2" type="radio" name="slide" />
            <input id="radio3" type="radio" name="slide" />
            <input id="radio4" type="radio" name="slide" />
        </div>
    </div>
</div>

<div class="container" id="owl-carousel">
    <div class="row">
        <div class="col-md-12">
            <div class="owl-carousel">
                @foreach (var category in Model.Categories)
                {
                    <div class="product-card">
                        @*<div class="product-badge text-danger">28% Off</div>*@<a class="product-thumb" href="/Product/Gallery?searchString=@category.Name" data-abc="true"><img loading="lazy" src="@category.ImgSource" alt="Category"></a>
                        <h3 class="product-title"><a href="/Product/Gallery?searchString=@category.Name" data-abc="true">@category.Name</a></h3>
                        @*<h4 class="product-price"> <del>$844.99</del>@cat.Price kr.</h4>*@
                        @*<div class="product-buttons"> <button class="btn btn-outline-secondary btn-sm btn-wishlist" data-toggle="tooltip" title="" data-original-title="Whishlist"><i class="fa fa-heart"></i></button> <button class="button">Add to Cart</button> </div>*@
                    </div>
                }
            </div>
        </div>
    </div>
</div>

