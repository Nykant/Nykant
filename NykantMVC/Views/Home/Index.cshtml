<div class="my-row top-padding bottom-padding">
    <div class="responsive-container">
        <div class="col-4 left text-center height-600">
            <p class="big-text vertical-center">VI SKABER NYE, NEMME MÅDER AT SAMLE MØBLER PÅ, MED ET ÆSTETISK LOOK.</p>
        </div>
        <div id="video-slide" class="col-8 left video-slide">
            <div class="half">
                <video class="vertical-center video" autoplay loop muted>
                    <source src="../videos/Tøjstativ.mp4" type="video/mp4" />
                </video>
            </div>
            <div class="half">
                <img class="vertical-center video-img" src="~/images/Products/Details_Fullscreen/Desktop/NYKANT_rack_naturolie_02.png" />
            </div>

            <a id="follow-link" asp-controller="Product" asp-action="Details" asp-route-urlname="Tøjstativ-Egetræ-Naturolie">
                <div class="follow-container" id="follow-container">

                    <div class="follow-box" id="follow-box">
                        <p id="follow-name">Tøjstativet Nora</p>
                        <p id="follow-oil">Naturolie</p>
