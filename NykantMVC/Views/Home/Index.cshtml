@if (Model.RandomDiscountProducts.Count > 0)
{
    <div class="my-row">
        <div class="col-12 left top-padding bottom-padding">
            <p class="karusel-header titlesize">ALLE TILBUD:</p>
            <div class="karusel" id="frontpage-karusel">
                <div class="karusel-box" id="frontpage-karusel-box">

                    @foreach (var product in Model.RandomDiscountProducts)
                    {
                        if (product.Category.Name == "Hylder")
                        {
                            if (product.Length != "40 cm.")
                            {
                                goto skip;
                            }
                        }
                        <div>
                            <div class="karusel-discount">
                                <p>-@product.Discount%</p>
                            </div>

                            <div class="karusel-price">
                                <p>kr. @ProductHelper.GetPrice(product) <span class="line-through red-text">@product.Price</span></p>
                            </div>
                            <a onclick="DiscountClick()" asp-controller="product" asp-action="details" asp-route-urlname="@product.UrlName" asp-route-category="@product.Category.Name">
                                <img loading="lazy" class="absolute-center" src="@product.GalleryImage1" alt="@product.Alt" />
                            </a>
                        </div>
                        skip:;
                    }
                    

                </div>
                <button class="karusel-back" onclick="frontpage_backevent()"><img src="https://static.nykant.dk/lib/svg/arrow-left.svg" /></button>
                <button class="karusel-forward" onclick="frontpage_forwardevent()"><img src="https://static.nykant.dk/lib/svg/arrow-right.svg" /></button>
            </div>
        </div>
    </div>
}

<div class="my-row top-padding bottom-padding">
