@model RegisterVM

<form asp-controller="Account" asp-action="Register" method="post">
    <div class="row top-padding">
        <div class="col-6 center">
            <div class="register-form">

                <div class="inputstyle">
                    <input required asp-for="Email" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email"></span>
                    <div class="underline"></div>
                </div>
                <div class="inputstyle">
                    <input required asp-for="Password" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password"></span>
                    <div class="underline"></div>
                </div>
                <input type="hidden" asp-for="ReturnUrl" />

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6 center">

            <div class="col-4 right fadein top-side-padding">
                <button class="button right-side-padding" type="submit">Register</button>
            </div>
            <a asp-action="Login" class="col-4 left fadein right-side-padding top-side-padding">
                <div class="button">
                    <p>Go Back</p>
                </div>
            </a>

        </div>
    </div>
</form>