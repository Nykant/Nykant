@model LoggedOutViewModel

@{
    // set this so the layout rendering sees an anonymous user
    ViewData["signed-out"] = true;
}
<div class="responsive-container">
    <div class="responsive-form">
        <div class="row top-padding">
            <div class="logged-out">
                <div class="header">
                    You are now logged out
                </div>
                @if (Model.SignOutIframeUrl != null)
                {
                    <iframe width="0" height="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>
                }
            </div>
        </div>
        <div class="row">

            @if (Model.PostLogoutRedirectUri != null)
            {
                <a href="@Model.PostLogoutRedirectUri" class="col-4 left fadein right-side-padding button-container ">
                    <div class="button dark-card">
                        <p>Return to app</p>
                    </div>
                </a>
                <a href="https://localhost:5001/account/login" class="col-4 right fadein right-side-padding  button-container">
                    <div class="button dark-card">
                        <p>Log in</p>
                    </div>
                </a>
            }

        </div>
    </div>

</div>



@section scripts
{
    @if (Model.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}
